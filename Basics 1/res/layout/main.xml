<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/test_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
    />

    <Button
        android:id="@+id/push_me_button"
        android:text="@string/push_me_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sayHello"
    />

    <Button
        android:id="@+id/click_me_button"
        android:text="@string/click_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeButtonTextColor"
    />

    <Button
        android:text="@string/another_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="changeTestTextColor"
    />

</LinearLayout>

